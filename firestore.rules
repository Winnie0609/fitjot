rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /workout_sessions/{sessionId} {
      // A user can create a session if they are logged in and the new
      // document's userId matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete a session if they are logged in
      // and the existing document's userId matches their own uid.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      // A user can create their own document, but not anyone else's.
      // The document ID must match the user's auth UID.
      allow create: if request.auth.uid == userId;

      // A user can only read and update their own document.
      allow read, update: if request.auth.uid == userId;
    }
  }
}